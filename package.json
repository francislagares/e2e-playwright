{
  "name": "react-typescript-starter",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@playwright/test": "^1.19.2",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write",
    "postinstall": "husky install",
    "test:playwright": "playwright test",
    "test:watch": "playwright-watch test",
    "test:debug": "PWDEBUG=1 npx playwright test",
    "test:debug-windows": "set PWDEBUG=1 && npx playwright test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "playwright-watch": "^1.3.23",
    "prettier": "^2.5.1",
    "webpack": "^5.69.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=17.3.0",
    "npm": ">=8.3.0"
  },
  "packageManager": "yarn@3.2.0"
}
